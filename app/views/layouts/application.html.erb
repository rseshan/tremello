<!DOCTYPE html>
<html>
<head>
  <title>Tremello</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% unless logged_in? %>	
	<%= link_to image_tag("http://connect.soundcloud.com/2/btn-connect-sc-l.png"), oauth_path %>
		<%= link_to "Sign Up", signup_path %>
		<%= link_to "Sign In", login_path %>
	<% else %>
		<%= link_to "Log Out", logout_path %>
	<% end %>

<%= yield %>

</body>
</html>
