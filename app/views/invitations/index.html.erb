<h1>Listing invitations</h1>

<table>
  <tr>
    <th>Status</th>
    <th>Inviter</th>
    <th>Invitee</th>
    <th>Band</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |invitation| %>
  <tr>
    <td><%= invitation.status %></td>
    <td><%= invitation.inviter.name %></td>
    <td><%= invitation.invitee.name %></td>
    <td><%= invitation.band.name %></td>
    <td><%= link_to 'Show', invitation %></td>
    <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
    <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

